<div class = "aligncenter">
    <h2><%= @group.group_name %></h2>   
</div>
<div id="main-wrap">
  <div id="content-wrap">     
      <br>
      <br>
      <br>
      <% @members.each do |m| %>
      <table class="table table-striped">  
        <% if m.user_id != current_user.id %>        
        <tr>      
          <th class = "right">
            <td>
              <%= link_to(m.user.name,{:controller => 'users', :action => 'show', :id => m.user_id}) %>
            </td>          
          </th>              
          <td>             
            <% if m.isCreator == true %>
            <%= link_to("أدمن للمجموعة",{:action => 'promoteMembers', :group_id=> @group.id,   :user_id => m.user_id}, :class =>'btn btn-danger  ') %>
            <% else %>     
              <%= link_to("ترقية إلى أدمن",{:action => 'promoteMembers', :group_id=> @group.id, :user_id => m.user_id}, :class =>'btn btn-primary') %>
            <% end %>  
          </td>
        </tr> <br> 
        <% end %>    
        <% end %>
      </table>
  </div> 
</div>


