<%= render(:partial => 'shared/error_messages' , :locals => {:object => @budget_item}) %>
<div> 
<h2>إنشاء عنصر مزانية</h2>
 	<%= form_for(:budget_item, :url=>{:action=>'create' , :id => @id }) do |f| %>
<table>
	<tr>
		<th><%= f.label(:Name , "إسم") %></th>
			<td><%= f.text_field(:name)%></td>
	</tr>
	</br>
	<tr>
		<td> <%= f.hidden_field(:status)%></td>
	</tr>
	<tr>
		<th><%= f.label("تشغيل") %></th>
			<td><%= f.check_box(:operational)%></td>
	</tr>
</br>
	<tr> 
		<td><%= f.hidden_field :project_id , :value=> @id %></td>
	</tr>
</table>
</br>
	<p>
		<td><%= f.submit("تسجيل") %></td>
	</p>
<% end %>
</div>

	