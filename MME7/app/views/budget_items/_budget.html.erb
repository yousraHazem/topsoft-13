<meta http-equiv="Content-Type" content="text/html;char=UTF-8">
<table class="table body">
	<tr>
		<th><%= f.label(:Name , "الاسم") %></th>
		<td><%= f.text_field(:name)%></td>
	</tr>
	</br>
	<tr>
		<th><%= f.label("تشغيل") %></th>
		<td><%= f.check_box(:operational)%></td>
	</tr>
	</br>
	<tr id = "connect" >
  		<th><%= f.label(:task_id, "المهمة")%></th>
  		<td><%= f.select(:task_id, @tasks.collect {|i| [i.title,i.id]} ,:id=>"drop-down") %></td>
    </tr>
	<tr> 
		<td><%= f.hidden_field :project_id , :value=> @project %></td>
	</tr>
</table>