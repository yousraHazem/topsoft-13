<%= render(:partial => 'shared/error_messages' , :locals => {:object => @budget_item}) %>
<div> 
	<h2>Update Budget Item</h2>
	<%= form_for(:budget_item, :url=>{:action=>'update' , :id => @budget_item.id}) do |f| %>
	<table>
<tr>
<th><%= f.label(:Name) %></th>
<td><%= f.text_field(:name)%></td>
</tr>
</br>
<tr>
<td> <%= f.hidden_field(:status)%></td>
</tr>
<tr>
<th><%= f.label(:Operational)%></th>
<td><%= f.check_box(:operational)%></td>
</tr>
</br>
<th>assign a user:</th>
<td>
	<% for user in User.find(:all) %>
	<div>
	<%= check_box_tag "budget_item.users[id][]", user.id, @budget_item.users.include?(user) %>
	<%= user.name %>
	</div>
	<% end %>
</td>
</table>
<p>
<td><%= f.submit %></td>
</p>
<% end %>
</div>

