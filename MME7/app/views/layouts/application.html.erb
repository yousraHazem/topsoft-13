<!DOCTYPE html>
<html dir="rtl">
<head>
<title>MME7</title>
 <%= stylesheet_link_tag "application", "token-input" , "token-input-facebook", :media=>"all" %>
 <%= javascript_include_tag "application", "jquery.tokeninput" %>
  <%= csrf_meta_tags %>
</head>
<body id = "background">
  <div class="navbar navbar-inverse">
  <div class="navbar-inner">
      <a class="btn btn-navbar" data-toggle="collapse" data-target=".nav-collapse">
        <span class="icon-bar"></span>
        <span class="icon-bar"></span>
        <span class="icon-bar"></span>
      </a>
      
      <div class="nav-collapse">
        <ul class="nav">

          <li  class="text-info"><%= link_to "Home"%></li>
          <li class="text-info"><%= link_to "About Us" %></li>
          <li class="text-info"><%= link_to "الاتصال بنا" %></li>
          <li class="text-info"><%= link_to "مجموعات" %></li>
          <li class="text-info"><%= link_to "المجتمعات" %></li>
          <li class="text-info"><%= link_to "امشاريع" %></li>
          <li  class="text-info"><% if current_user %><%= current_user.username %>.<li class="offset10"><%= link_to "خروج", log_out_path %></li><% else %>
            <%= link_to "اشتراك", sign_up_path , :id=>"signup" %> </li><li><%= link_to " دخول", log_in_path , :id=>"signin" %><% end %>

        </ul>
      </div>
  </div>
</div>


<div class="container">

  <div class="row"></div>
  <div class="span9"> </div>

<% flash.each do |name, msg| %>
  <%= content_tag :div, msg, :id => "flash_#{name}" %>
<% end %>

<div id="style">
<%= yield %>
</div>

</div>
  

</body>
</html>

