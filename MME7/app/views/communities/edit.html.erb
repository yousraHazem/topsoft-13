
<%= link_to("<< Back to List", {:action => 'list'}, :class => 'back-link') %>

<div>
  <h2>Update Community</h2>

  <%= form_for(:community, :url => {:action => 'update', :id => @community.id}) do |t| %>
  
    <table>
      <tr>
        <th>Title</th>
        <td><%= t.text_field(:title) %></td>
      </tr>
      <tr>
        <th>Social_profile_info</th>
        <td><%= t.text_field(:social_profile_info) %></td>
      </tr>
      <tr>
        <th>Contact info</th>
        <td><%= t.text_field(:contact_info) %></td>
      </tr>
    </table>
    
    <div>
      <%= submit_tag("update community") %>
    </div>
    
  <% end %>
</div>
