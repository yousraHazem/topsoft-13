<%= link_to("<< رجوع", {:action => 'list'}, :class => 'back-link') %>


  <h2>المجتمع</h2>

  <div class="alignright">

  <table class="table table-hover" align="right"  >
    
    <tr>
      <th>اسم المجتمع:</th>
      <td><%= @community.title %></td>
    </tr>
    <tr>
      <th>وصف عن المجتمع:</th>
      <td><%= @community.social_profile_info %></td>
    </tr>
    <tr>
      <th>البريد الالكتروني: </th>
      <td><%= @community.contact_info  %></td>
    </tr>
    
     <tr> 
        
        <%if @community.is_dismissed != true  && current_user.isAdmin == true %>
          <th>يمكنك فعل:</th>
           <td>
            <li><%= link_to("تعدىل", {:action => 'edit', :id => @community.id}) %><i class="icon-pencil"></i> </li>
            
            </br>
            
            <li><%= link_to("مسح", {:action => 'destroy', :id => @community.id}, :confirm => "هل انت متأكد؟", :class => 'action delete') %><i class="icon-remove"></i></li>
          </br>
          <li><%= link_to("المشروعات", {:action => 'listCommunityProject', :id => @community.id}) %><i class="icon-list"></i> </li>


            </td>
        <%end%>
        
      </tr>
     
  </table>
  </div>
  
