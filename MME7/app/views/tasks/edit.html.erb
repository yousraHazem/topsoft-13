<meta http-equiv="Content-Type" content="text/html;charset=UTF-8">
 
<div class="post edit">
  <h2>تعديل مهمة </h2>

  <%= form_for(:task, :url => {:action => 'update', :id =>params[:id], :project_id => params[:project_id]}) do |f| %>
    <table>
      <tr>
        <th>المهمة</th>
        <td><%= f.text_field(:description) %></td>
      </tr>
    </table>
    
    <div class="form-buttons">
      <%= submit_tag("تعديل") %>
    </div>
    
  <% end %>
</div>