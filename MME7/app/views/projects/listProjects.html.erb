<% @page_title = "Projects List" %>
<div >
 <h2 class="title">المشاريع</h2>
 <% if loged_in? %>
	 <% if current_user.isAdmin == true %>
	 	<%= link_to("كون مشروع",{:action => 'newProject'}, :class =>'btn') %>
	 <% end %>
  <% end %>
  <br>
  <br>
  <br>
  <br>
  <br>
  <br>
    <table class="table body">
	 	<tr>
	 		<th>المشروع</th>
	 		<th>تاريخ البداية</th>
	 		<th>تاريخ النهاىة</th>
	 		<th>التفاصيل</th>
	 	</tr>
	 	<% @projects.each do |project| %>
		 	<tr>
		 		<td> <%= link_to("#{project.name}", {:action => 'show', :id => project.id} , :class=>"link") %></td>
		 		<td> <%= project.start_date %>   </td>
		 		<td> <%= project.end_date %>     </td>
		 		<td> <%= project.description %>  </td>
	            <% if loged_in? %>
				  <% if current_user.isAdmin == true || isProjectCreator(current_user.id, project.id) %>
						<td >
						   <li><%= link_to("الغاء", {:action => 'destroy', :id => project.id}, :class=>"link") %><i class="icon-remove"></i> </li>
						</td>
				  <% end %>
				<% end %>
				
		 	</tr>
	 	<% end %>
    </table>
</div>
