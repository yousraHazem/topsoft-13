<meta http-equiv="Content-Type" content="text/html;charset=UTF-8">
    <table>
      <tr>
        <td>
          <%= form_for(:project, :url =>  {:action => 'listProjects', :class => 'back link'}) do |f| %>
              <button type="submit">قائمة المشاريع</button>
           <% end %>
        </td>
        <td>
          <%= form_for(:project, :url => {:controller => 'budget_items',:action => 'list', :id => @project.id}) do |f| %>
