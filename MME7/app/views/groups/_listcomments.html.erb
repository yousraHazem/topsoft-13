<div class = "well" id="com">
    <%= error_messages_for(@comment) %>
<% post.comments.each do |c| %>
    
       <% if isCommentCreator(current_user.id,c.id) == true %>
 <div class="well well-small" id="eachcom"><b id="username">

    <%=c.name %></b></br>
    <%=best_in_place c, :comment, :path => {:controller => 'comments', :action=>'updateComment', :id=> c.id, :post_id => :post_id, :group_id => @group.id} %>
    <%= link_to("x", {:controller => 'comments', :action => 'destroyComment', :comment_id => c.id, :group_id => @group.id}, :confirm => 'Are you sure you want to delete this comment?', :class => 'action delete') %> </div></br>
    <%else%>
     <div class = "well well-small" id="eachcom"><b id="username">
         <%=c.name %></b></br>
        <%=c.comment%>
     </b>
    </div>
</br>
    <% end %>
<% end %>
    <%= form_for(:comment, :url => {:controller => 'comments',:action => 'createComment', :post_id => post.id, :group_id => @group.id, :user_id => current_user.id}, :html => {:id => "comment-form"}) do |f| %>
    <td><%= f.text_field (:comment), :placeholder =>"اضف تعليقك" %></td>
    <%= f.hidden_field :post_id, :value => post.id%>
    <%= f.hidden_field :user_id, :value => current_user.id %>
    <%= f.hidden_field :is_group, :value => 'true' %>
    <%= f.hidden_field :name, :value => current_user.name %> 
<% end %>  
</div>



