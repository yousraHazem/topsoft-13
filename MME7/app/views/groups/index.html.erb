<h1>Groups</h1>

<table>
  <tr>
    <th>Name</th>
  </tr>

<% @groups.each do |group| %>
  <tr>
    <td><%= group.group_name %></td>
    <td><%= link_to 'Show', group %></td>
  </tr>
<% end %>
</table>

<br />

<%= link_to("Delete", {:action => 'delete', :id => group.id}, :class => 'action delete') %>