<h1>Groups</h1>

<%= link_to("Add New Group", {:action => 'new'}, :class => 'action new') %>


<table>
  <tr>
    <th>Name</th>
  </tr>

  <% if @groups %>
  <% @groups.each do |group| %>
  <tr>
    <td><%= group.group_name %></td>
    <td><%= link_to("Show", {:action => 'show', :id => group.id}, :class => 'action show') %></td>
    <td><%= link_to("Delete", {:action => 'delete', :id => group.id}, :class => 'action delete') %></td>
  </tr>
<% end %>
</table>

<br />

<% end %>
